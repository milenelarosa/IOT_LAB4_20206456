<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Borde alrededor del pedido -->
    <solid android:color="#FFFFFF"/> <!-- Fondo blanco para el pedido -->

    <!-- Borde en los lados -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/> <!-- Color gris claro para el borde -->

    <!-- Esquinas ligeramente redondeadas -->
    <corners android:radius="25dp" />

    <!-- Padding interno opcional -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>